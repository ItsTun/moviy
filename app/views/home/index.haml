= render 'layouts/carousel', latest_movies: @latest_movies, cache: true
.col-md-12
  %h4.title Latest Movies
  .row.collections
    - @movies.each do |movie|
      .col-md-3
        = link_to movie_detail_path(movie) do
          .card.card-background{:style => "background-image: url(#{image_path variant_url(movie.thumbnail, :medium)})"}
            %a{:href => "#pablo"}
            .card-content
              %label.label.label-primary.episode EPS 10
              %h2.card-title Stilleto
= paginate @movies
